<h1> <%= @tag.name %> </h1>

<div class="row">
  <% @gifs.each do |gif| %>
    <div class="col-md-3 mr-4">
      <div class="card" style="width: 18rem;">
        <%= cl_image_tag gif.image.key, crop: :fill %>
        <div class="card-body">
          <span class="text-muted">Tags:</span>
          <%= render gif.tags %>
        </div>
      </div>
    </div>
  <% end %>
</div>